<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="carezoneshop.bigyan.com.carezoneshopping.fragments.AddItem">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/itemNameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="88dp"
        android:textSize="25dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category"
        android:id="@+id/itemCategoryTextView"
        android:layout_below="@+id/itemNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:textSize="25dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/itemNameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Item Name"
        android:paddingLeft="5dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="Item Category"
        android:paddingLeft="5dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Add"
        android:id="@+id/addItemButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="102dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:id="@+id/cancelItemButton"
        android:layout_alignTop="@+id/addItemButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp" />
</RelativeLayout>
